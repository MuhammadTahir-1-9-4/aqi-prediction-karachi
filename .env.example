# =====================================================
# Environment Configuration Template
# =====================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file - it contains secrets
# =====================================================

# =====================================================
# REQUIRED - API Keys & Credentials
# =====================================================

# Hopsworks Feature Store API Key
# Get from: https://app.hopsworks.ai/ → Account Settings → API Keys
HOPSWORKS_API_KEY=your_hopsworks_api_key_here

# OpenWeather API Key (for AQI data)
# Get from: https://openweathermap.org/api → Sign Up → API Keys
OPENWEATHER_API_KEY=your_openweather_api_key_here

# =====================================================
# LOCATION SETTINGS
# =====================================================

# Latitude for location (Karachi example: 24.8607)
LAT=24.8607

# Longitude for location (Karachi example: 67.0011)
LON=67.0011

# =====================================================
# OPTIONAL - Alert System Configuration
# =====================================================

# EMAIL ALERTS
# Gmail app-specific password for sending alerts
# Generate from: https://myaccount.google.com/apppasswords
ALERT_EMAIL=your_email@gmail.com
ALERT_EMAIL_PASSWORD=your_app_specific_password

# Comma-separated list of recipient emails
ALERT_RECIPIENTS=recipient1@example.com,recipient2@example.com

# =====================================================
# OPTIONAL - Slack Alerts
# =====================================================

# Slack Webhook URL for sending AQI alerts
# Create from: https://api.slack.com/apps → Incoming Webhooks
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =====================================================
# OPTIONAL - Telegram Alerts
# =====================================================

# Telegram Bot Token
# Create bot from: @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Comma-separated list of Telegram Chat IDs to receive alerts
TELEGRAM_CHAT_IDS=123456789,987654321

# =====================================================
# OPTIONAL - Advanced Settings
# =====================================================

# Hopsworks Project Name
HOPSWORKS_PROJECT_NAME=aqi_predicton

# Model Training Parameters
MODEL_TEST_SIZE=0.2
MODEL_RANDOM_STATE=42

# Alert Thresholds (AQI values)
ALERT_THRESHOLD_MODERATE=2
ALERT_THRESHOLD_UNHEALTHY=3
ALERT_THRESHOLD_HAZARDOUS=4

# =====================================================
# Environment
# =====================================================

# Development, staging, or production
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true
